<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="domicilio">
    
    <!-- Agregar nueva direcci贸n -->
    <insert id="agregarDireccion" parameterType="modelo.pojo.Direccion">
        INSERT INTO Direccion (Calle, Numero, CodigoPostal, Colonia, Ciudad)
        VALUES (#{calle}, #{numero}, #{codigoPostal}, #{colonia}, #{ciudad})
    </insert>
    
    <!-- Editar direcci贸n -->
    <update id="editarDireccion" parameterType="modelo.pojo.Direccion">
        UPDATE Direccion
        SET Calle = #{calle},
            Numero = #{numero},
            CodigoPostal = #{codigoPostal},
            Colonia = #{colonia},
            Ciudad = #{ciudad}
        WHERE idDireccion = #{idDireccion}
    </update>
    
    <!-- Eliminar direcci贸n -->
    <delete id="eliminarDireccion" parameterType="Integer">
        DELETE FROM Direccion
        WHERE idDireccion = #{idDireccion}
    </delete>
    
    <!-- Consultar todas las direcciones -->
    <select id="obtenerDomicilios" resultType="modelo.pojo.Direccion">
        SELECT *
        FROM Direccion
    </select>
    
    <!-- Consultar direcci贸n por ID -->
    <select id="obtenerDireccionPorID" resultType="modelo.pojo.Direccion" parameterType="Integer">
        SELECT *
        FROM Direccion
        WHERE idDireccion = #{idDireccion}
    </select>
    
</mapper>
